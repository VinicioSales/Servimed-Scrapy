# TEMPLATE DE CONFIGURAÇÃO - SERVIMED SCRAPER
# ===========================================
# INSTRUÇÕES:
# 1. Copie este arquivo para ".env" 
# 2. Preencha com seus dados reais
# 3. NUNCA compartilhe o arquivo .env com dados reais

# TOKENS DE AUTENTICAÇÃO (obrigatório)
ACCESS_TOKEN=seu_access_token_aqui
SESSION_TOKEN=seu_session_token_aqui

# CREDENCIAIS DO PORTAL (obrigatório)
PORTAL_EMAIL=seu_email@exemplo.com
PORTAL_PASSWORD=sua_senha_aqui

# CONFIGURAÇÕES DO USUÁRIO (obrigatório)
LOGGED_USER=seu_user_id
CLIENT_ID=seu_client_id
X_CART=seu_x_cart_hash

# USUÁRIOS AUTORIZADOS (obrigatório - separados por vírgula)
USERS=user1,user2

# URLs (opcional - valores padrão serão usados se não especificado)
PORTAL_URL=https://pedidoeletronico.servimed.com.br
BASE_URL=https://peapi.servimed.com.br
API_ENDPOINT=/api/carrinho/oculto
SITE_VERSION=4.0.27

# ============================================================
# CONFIGURAÇÕES ADICIONAIS PARA NÍVEL 2 (Sistema de Filas)
# ============================================================

# Configurações da API de Callback (Nível 2)
CALLBACK_API_URL=https://desafio.cotefacil.net
CALLBACK_API_USER=juliano@farmaprevonline.com.br
CALLBACK_API_PASSWORD=a007299A

# Configurações do Redis (Nível 2)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configurações do Celery (Nível 2)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=America/Sao_Paulo

# Configurações do Scraper
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY_BETWEEN_REQUESTS=1
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3

# Configurações de Output
OUTPUT_DIR=data
BACKUP_ENABLED=true
LOG_LEVEL=INFO

# Configurações de Desenvolvimento
DEBUG=false
VERBOSE=false

# Configurações de Monitoramento (opcional)
FLOWER_PORT=5555
FLOWER_URL_PREFIX=/flower

# COMO OBTER OS TOKENS:
# 1. Abra o portal Servimed no navegador
# 2. Faça login com suas credenciais
# 3. Abra DevTools (F12) > Network
