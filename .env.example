# TEMPLATE DE CONFIGURAÇÃO - SERVIMED SCRAPER
# ===========================================
# INSTRUÇÕES:
# 1. Copie este arquivo para ".env" 
# 2. Preencha com seus dados reais
# 3. NUNCA compartilhe o arquivo .env com dados reais

# ============================================================
# TOKENS DE AUTENTICAÇÃO (obrigatório)
# ============================================================
ACCESS_TOKEN=seu_access_token_aqui
SESSION_TOKEN=seu_session_token_aqui

# ============================================================
# CREDENCIAIS DO PORTAL (obrigatório)
# ============================================================
PORTAL_EMAIL=seu_email@exemplo.com
PORTAL_PASSWORD=sua_senha_aqui

# ============================================================
# CONFIGURAÇÕES DO USUÁRIO (obrigatório)
# ============================================================
LOGGED_USER=seu_user_id
CLIENT_ID=seu_client_id
CLIENT_SECRET=seu_client_secret
X_CART=seu_x_cart_hash

# USUÁRIOS AUTORIZADOS (obrigatório - separados por vírgula)
USERS=user1,user2

# ============================================================
# COTEFACIL API - OAuth2PasswordBearer (obrigatório para Nível 2/3)
# ============================================================
COTEFACIL_BEARER_TOKEN=seu_bearer_token_aqui
COTEFACIL_API_URL=https://desafio.cotefacil.net

# ============================================================
# CALLBACK API (obrigatório para Nível 2/3)
# ============================================================
CALLBACK_API_USER=seu_email@exemplo.com
CALLBACK_API_PASSWORD=sua_senha_aqui
CALLBACK_URL=https://desafio.cotefacil.net

# ============================================================
# URLs (opcional - valores padrão serão usados se não especificado)
# ============================================================
PORTAL_URL=https://pedidoeletronico.servimed.com.br
BASE_URL=https://peapi.servimed.com.br
API_ENDPOINT=/api/carrinho/oculto
SITE_VERSION=4.0.27

# ============================================================
# CONFIGURAÇÕES ADICIONAIS PARA NÍVEL 2 (Sistema de Filas)
# ============================================================

# Configurações do Redis (Nível 2)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configurações do Celery (Nível 2)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=America/Sao_Paulo

# ============================================================
# CONFIGURAÇÕES DO SCRAPER (opcional)
# ============================================================
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY_BETWEEN_REQUESTS=1
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3

# ============================================================
# CONFIGURAÇÕES DE OUTPUT (opcional)
# ============================================================
OUTPUT_DIR=data
BACKUP_ENABLED=true
LOG_LEVEL=INFO

# ============================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO (opcional)
# ============================================================
DEBUG=false
VERBOSE=false

# ============================================================
# CONFIGURAÇÕES DE MONITORAMENTO (opcional - Nível 2)
# ============================================================
FLOWER_PORT=5555
FLOWER_URL_PREFIX=/flower

# ============================================================
# COMO OBTER OS TOKENS:
# ============================================================
# 1. Abra o portal Servimed no navegador
# 2. Faça login com suas credenciais
# 3. Abra DevTools (F12) > Network
# 4. Faça uma busca qualquer
# 5. Procure pela requisição "oculto"
# 6. Copie os valores dos headers/cookies:
#    - ACCESS_TOKEN (do header 'accesstoken')
#    - SESSION_TOKEN (do cookie 'sessiontoken')
#    - LOGGED_USER (do header 'loggeduser')
#    - X_CART (do header 'x-cart')
#    - CLIENT_ID (do contexto da aplicação)
